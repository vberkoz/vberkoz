---
import { Button } from "@/components/ui/button";
import BaseLayout from "../layouts/BaseLayout.astro";
import { ArrowRight, Github, Linkedin, Mail } from "lucide-react";
---

<BaseLayout
    pageTitle="Contact | Vasyl Berkoz"
    pageDescription="Get in touch with Vasyl Berkoz for web development projects, collaborations, or general inquiries. Available for freelance work and consulting."
    pageKeywords="Contact, Web Developer, Freelance, Vasyl Berkoz, Full Stack Developer, Project Inquiries, Professional Contact"
    pageAuthor="Vasyl Berkoz"
    pageOgTitle="Contact | Vasyl Berkoz"
    pageOgDescription="Connect with Vasyl Berkoz for web development projects, collaborations, and professional inquiries."
    pageOgUrl="https://vberkoz.com/contact"
    pageOgType="website"
>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-16 space-y-12">
        <section class="text-center space-y-4 mb-12 animate-slide-down">
            <h1 class="text-4xl font-bold">Contact Me</h1>
            <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                Have a project in mind or just want to chat? Feel free to reach out through any of the channels below.
            </p>
        </section>

        <div class="max-w-2xl mx-auto animate-slide-up">
            <div class="space-y-10">
                <div>
                    <h2 class="text-2xl font-semibold mb-6 text-center">
                        Get in Touch
                    </h2>
                    <div class="space-y-6 bg-card p-8 rounded-lg border shadow-sm">
                        <div class="flex items-center space-x-2">
                            <Mail
                                className="h-6 w-6 mr-4 text-primary"
                            />
                            <div>
                                <p class="font-medium">Email</p>
                                <a
                                    href="mailto:vberkoz@gmail.com"
                                    class="text-muted-foreground hover:text-foreground transition-colors"
                                >vberkoz@gmail.com</a>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <Linkedin
                                className="h-6 w-6 mr-4 text-primary"
                            />
                            <div>
                                <p class="font-medium">LinkedIn</p>
                                <a
                                    href="https://www.linkedin.com/in/vasyl-berkoz-224a8bb0/"
                                    class="text-muted-foreground hover:text-foreground transition-colors"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >linkedin.com/in/vasyl-berkoz</a>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <Github
                                className="h-6 w-6 mr-4 text-primary"
                            />
                            <div>
                                <p class="font-medium">GitHub</p>
                                <a
                                    href="https://github.com/vberkoz"
                                    class="text-muted-foreground hover:text-foreground transition-colors"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >github.com/vberkoz</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <h2 class="text-2xl font-semibold mb-6 text-center">Languages</h2>
                    <div class="grid grid-cols-3 gap-4 text-center bg-card p-8 rounded-lg border shadow-sm">
                        <div class="space-y-2">
                            <p class="font-medium">English</p>
                            <p class="text-muted-foreground">Proficient</p>
                        </div>
                        <div class="space-y-2">
                            <p class="font-medium">Ukrainian</p>
                            <p class="text-muted-foreground">Native</p>
                        </div>
                        <div class="space-y-2">
                            <p class="font-medium">Polish</p>
                            <p class="text-muted-foreground">B1 Level</p>
                        </div>
                    </div>
                </div>
                
                <div class="flex justify-center pt-6">
                    <a href="/" class="inline-flex items-center justify-center text-sm font-medium whitespace-nowrap transition-all outline-none focus-visible:border-ring focus-visible:ring-[3px] focus-visible:ring-ring/50 active:scale-[0.95] disabled:pointer-events-none disabled:opacity-50 aria-invalid:border-destructive aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4 h-8 gap-1.5 rounded-full px-2.5 select-none border border-input bg-background hover:bg-accent hover:text-accent-foreground">
                        <ArrowRight className="h-4 w-4 rotate-180" />
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
