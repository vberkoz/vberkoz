---
import { Button } from "@/components/ui/button";
import BaseLayout from "../layouts/BaseLayout.astro";
import { ArrowRight, Github, Linkedin, Mail } from "lucide-react";
---

<BaseLayout
    pageTitle="Contact | Vasyl Berkoz"
    pageDescription="Get in touch with Vasyl Berkoz for web development projects, collaborations, or general inquiries. Available for freelance work and consulting."
    pageKeywords="Contact, Web Developer, Freelance, Vasyl Berkoz, Full Stack Developer, Project Inquiries, Professional Contact"
    pageAuthor="Vasyl Berkoz"
    pageOgTitle="Contact | Vasyl Berkoz"
    pageOgDescription="Connect with Vasyl Berkoz for web development projects, collaborations, and professional inquiries."
    pageOgUrl="https://vberkoz.com/contact"
    pageOgType="website"
>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-16 space-y-12">
        <section class="text-center space-y-4 mb-12 animate-slide-down">
            <h1 class="text-4xl font-bold">Contact Me</h1>
            <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                Have a project in mind or just want to chat? Feel free to reach
                out.
            </p>
        </section>

        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-12 animate-slide-up"
        >
            <div class="space-y-8">
                <div>
                    <h2 class="text-2xl font-semibold mb-6">
                        Get in Touch
                    </h2>
                    <div class="space-y-4">
                        <div class="flex items-center space-x-2">
                            <Mail
                                className="h-5 w-5 mr-3 text-muted-foreground"
                            />
                            <a
                                href="mailto:vberkoz@gmail.com"
                                class="text-muted-foreground hover:text-foreground transition-colors"
                                >vberkoz@gmail.com</a
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <Linkedin
                                className="h-5 w-5 mr-3 text-muted-foreground"
                            />
                            <a
                                href="https://www.linkedin.com/in/vasyl-berkoz-224a8bb0/"
                                class="text-muted-foreground hover:text-foreground transition-colors"
                                target="_blank"
                                rel="noopener noreferrer"
                                >linkedin.com/in/vasyl-berkoz</a
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <Github
                                className="h-5 w-5 mr-3 text-muted-foreground"
                            />
                            <a
                                href="https://github.com/vberkoz"
                                class="text-muted-foreground hover:text-foreground transition-colors"
                                target="_blank"
                                rel="noopener noreferrer">github.com/vberkoz</a
                            >
                        </div>
                    </div>
                </div>

                <div>
                    <h2 class="text-2xl font-semibold mb-6">Languages</h2>
                    <div class="space-y-4">
                        <div class="flex items-center space-x-2">
                            <span class="font-medium mr-2">English:</span>
                            <span class="text-muted-foreground"
                                >Proficient</span
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <span class="font-medium mr-2">Ukrainian:</span>
                            <span class="text-muted-foreground">Native</span
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <span class="font-medium mr-2">Polish:</span>
                            <span class="text-muted-foreground"
                                >B1 Level</span
                            >
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <h2 class="text-2xl font-semibold">Send a Message</h2>
                
                <form class="space-y-4">
                    <div class="grid grid-cols-1 gap-4">
                        <div class="space-y-2">
                            <label for="name" class="text-sm font-medium">Name</label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="Your name"
                                class="w-full px-3 py-2 border rounded-md bg-background"
                                required
                            />
                        </div>
                        
                        <div class="space-y-2">
                            <label for="email" class="text-sm font-medium">Email</label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="Your email address"
                                class="w-full px-3 py-2 border rounded-md bg-background"
                                required
                            />
                        </div>
                        
                        <div class="space-y-2">
                            <label for="subject" class="text-sm font-medium">Subject</label>
                            <input
                                type="text"
                                id="subject"
                                name="subject"
                                placeholder="What is this regarding?"
                                class="w-full px-3 py-2 border rounded-md bg-background"
                                required
                            />
                        </div>
                        
                        <div class="space-y-2">
                            <label for="message" class="text-sm font-medium">Message</label>
                            <textarea
                                id="message"
                                name="message"
                                rows="5"
                                placeholder="Your message"
                                class="w-full px-3 py-2 border rounded-md bg-background resize-none"
                                required
                            ></textarea>
                        </div>
                    </div>
                    
                    <Button type="submit" className="w-full">
                        Send Message
                        <ArrowRight className="ml-2 h-4 w-4" />
                    </Button>
                </form>
            </div>
        </div>
    </div>
</BaseLayout>
